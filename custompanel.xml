<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
<!-- 
Include your PyVCP panel here.
The contents of this file will not be overwritten when you run stepconf again.
-->

<!-- Mist coolant btn -->
<vbox>
    <label>
        <text>"App"</text>
    </label>
    <labelframe text="Coolants">
        <relief>RIDGE</relief>
        <bd>6</bd>
        <hbox>
            <led>
                <halpin>"mist.is-on"</halpin>
                <size>40</size>
                <on_color>"red"</on_color>
                <off_color>"black"</off_color>
            </led>
            <label>
                <text>"Press F7"</text>
            </label>
        </hbox>
    </labelframe>
</vbox>

<!-- Mist coolant btn -->
<vbox>
    <label>
        <text>"Macros"</text>
    </label>
    <labelframe text="G-codes">
        <button>
            <halpin>"G54_ZERO"</halpin>
            <text>"XYZ zero"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
        <button>
            <halpin>"GO_ZEROS"</halpin>
            <text>"Go to zeros"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
        <button>
            <halpin>"TOOL_PROBE"</halpin>
            <text>"Probe tool"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
    </labelframe>
</vbox>

<vbox>
    <label>
        <text>"Status"</text>
    </label>
    <labelframe>
        <hbox>
            <label>
                <text>"Tool: "</text>
            </label>
            <s32>
                <halpin>"CUR_TOOL"</halpin>
                <font>("Helvetica",14)</font>
                <format>"2d"</format>
                <width>6</width>
            </s32>
        </hbox>
        <hbox>
            <led>
                <halpin>"HOME_LED"</halpin>
                <size>20</size>
                <on_color>"green"</on_color>
                <off_color>"black"</off_color>
            </led>
            <label>
                <text>"Home sw"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"PROBER_LED"</halpin>
                <size>20</size>
                <on_color>"red"</on_color>
                <off_color>"black"</off_color>
            </led>
            <label>
                <text>"Prober"</text>
            </label>
        </hbox>
    </labelframe>
</vbox>

<vbox>
    <label>
        <text>"Tool change"</text>
    </label>
    <labelframe text="Tool">
        <button>
            <halpin>"RESET_TOOL"</halpin>
            <text>"RESET TOOL"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
        <button>
            <halpin>"SET_TOOL_PROBER"</halpin>
            <text>"SET PROBER"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
    </labelframe>
</vbox>

</pyvcp>
