<!-- Status -->
<vbox>
    <label>
        <text>"Status"</text>
    </label>
    <labelframe>
        <hbox>
            <label>
                <text>"Tool: "</text>
            </label>
            <s32>
                <halpin>"CUR_TOOL"</halpin>
                <font>("Helvetica",14)</font>
                <format>"2d"</format>
                <width>6</width>
            </s32>
        </hbox>
        <hbox>
            <label>
                <text>"Tool dia: "</text>
            </label>
            <number>
                <halpin>"DIA_TOOL"</halpin>
                <font>("Helvetica",14)</font>
                <format>"2.2f"</format>
                <width>6</width>
            </number>
        </hbox>
        <hbox>
            <label>
                <text>"Tool len: "</text>
            </label>
            <number>
                <halpin>"LEN_TOOL"</halpin>
                <font>("Helvetica",14)</font>
                <format>"2.2f"</format>
                <width>6</width>
            </number>
        </hbox>
        <hbox>
            <led>
                <halpin>"HOME_LED"</halpin>
                <size>20</size>
                <on_color>"green"</on_color>
                <off_color>"black"</off_color>
            </led>
            <label>
                <text>"Home sw"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"PROBER_LED"</halpin>
                <size>20</size>
                <on_color>"red"</on_color>
                <off_color>"black"</off_color>
            </led>
            <label>
                <text>"Prober"</text>
            </label>
        </hbox>
    </labelframe>
</vbox>

<!-- Tools -->
<vbox>
    <label>
        <text>"Tool change"</text>
    </label>
    <labelframe text="Options">
    <hbox>
        <checkbutton>
            <halpin>"ignore-m6-box"</halpin>
            <text>"Ignore M6"</text>
            <initval>0</initval>
        </checkbutton>
    </hbox>
    <!--<hbox>
        <checkbutton>
            <halpin>"reprobe-box"</halpin>
            <text>"Reprobe M6"</text>
            <initval>0</initval>
        </checkbutton>
        
    </hbox>-->
    <hbox>
        <checkbutton>
            <halpin>"enable-mist-probe"</halpin>
            <text>"Mist on probing"</text>
            <initval>1</initval>
        </checkbutton>
    </hbox>
    </labelframe>
    <labelframe text="Tool">
        <button>
            <halpin>"RESET_TOOL"</halpin>
            <text>"RESET TOOL"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"red"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
        <!--<button>
            <halpin>"TOOL_PROBE"</halpin>
            <text>"PROBE TOOL"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>-->
        <button>
            <halpin>"SET_TOOL_PROBER"</halpin>
            <text>"SET PROBER"</text>
            <bd>4</bd>
            <font>("Monospace", 10, "bold")</font>
            <activebackground>"medium aquamarine"</activebackground>
            <padx>7</padx>
            <pady>7</pady>
        </button>
    </labelframe>
</vbox>

